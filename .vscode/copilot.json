  "github.copilot.bulkOperations": {
    "autoApprove": true,
    "maxFiles": 100,
    "confirmationThreshold": 10,
    "allowedOperations": [
      "import_fixes",
      "mass_replace",
      "refactoring",
      "lint_fixes",
      "format_fixes",
      "test_fixes"
    ]
  },
  
  "github.copilot.toolAutoApproval": {
    "python": {
      "enabled": true,
      "commands": ["*"],
      "tools": ["*"],
      "scripts": ["*"],
      "modules": ["*"]
    },
    "powershell": {
      "enabled": true,
      "commands": ["*"],
      "scripts": ["*"],
      "cmdlets": ["*"]
    },
    "pwsh": {
      "enabled": true,
      "commands": ["*"],
      "scripts": ["*"],
      "cmdlets": ["*"],
      "analysisCommands": [
        "Get-ChildItem",
        "Get-Content", 
        "Get-Location",
        "Get-Process",
        "Get-Service",
        "Measure-Object",
        "Compare-Object",
        "Test-Path",
        "Resolve-Path",
        "Get-ItemProperty",
        "Get-Member",
        "Get-Variable",
        "Get-Command",
        "Get-Module",
        "Format-Table",
        "Format-List",
        "Sort-Object",
        "Group-Object",
        "Select-Object",
        "Where-Object",
        "ForEach-Object"
      ]
    },
    "terminal": {
      "autoApproveAll": true,
      "languages": ["python", "powershell", "pwsh", "bash", "cmd"]
    }
  },
  
  "github.copilot.repositoryAnalysis": {
    "autoApprove": true,
    "commands": [
      "Get-ChildItem*",
      "gci*",
      "ls*",
      "dir*",
      "tree*",
      "find*",
      "grep*",
      "search*",
      "analyze*",
