      "explore*",
      "scan*",
      "review*",
      "audit*",
      "test*",
      "debug*",
      "trace*",
      "monitor*",
      "measure*",
      "profile*",
      "benchmark*",
      "compare*"
    ],
    "patterns": [
      "*analysis*",
      "*debug*", 
      "*check*",
      "*verify*",
      "*validate*",
      "*test*",
      "*inspect*",
      "*explore*",
      "*scan*",
      "*review*",
      "*audit*",
      "*monitor*",
      "*measure*",
      "*profile*",
      "*benchmark*",
      "*compare*"
    ],
    "fileOperations": {
      "read": true,
      "list": true,
      "search": true,
      "analyze": true
    }
  },
  
  "github.copilot.refactoringMode": {
    "enabled": true,
    "autoApproveSimpleChanges": true,
    "autoApproveImportFixes": true,
    "autoApproveLintFixes": true,
    "maxFilesPerBatch": 50
  },
  
