{
  "github.copilot.chat.experimental.agents": true,
  "github.copilot.chat.experimental.codeActions": true,
  "github.copilot.chat.experimental.contextSelection": true,
  "github.copilot.chat.experimental.generateTests": true,
  
  "github.copilot.autoApprove": {
    "enabled": true,
    "allCommands": true,
    "allTools": true,
    "languages": {
      "python": true,
      "powershell": true,
      "pwsh": true
    },
    "terminals": {
      "python": true,
      "powershell": true,
      "pwsh": true,
      "cmd": true,
      "bash": true
    }
  },
  
  "github.copilot.advanced": {
    "listCount": 10,
    "inlineSuggestCount": 5,
    "top_p": 1,
    "temperature": 0.1
  },
  
  "github.copilot.autoApproveCommands": [
    "replace_string_in_file",
