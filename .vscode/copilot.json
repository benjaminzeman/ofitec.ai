  "github.copilot.contextPatterns": {
    "backend": [
      "backend/**/*.py",
      "*.py",
      "requirements.txt",
      "pytest.ini",
      ".flake8"
    ],
    "frontend": [
      "frontend/**/*.{ts,tsx,js,jsx}",
      "frontend/**/*.{css,scss}",
      "package.json",
      "package-lock.json",
      "tsconfig.json",
      "next.config.js"
    ],
    "database": [
      "data/*.db",
      "**/*_schema.sql",
      "**/*_migration.sql"
    ],
    "docker": [
      "docker-compose*.yml",
      "**/Dockerfile*",
      ".dockerignore"
    ],
    "config": [
      ".vscode/**",
      ".github/**",
      "scripts/**",
      ".env*",
      "*.json",
      "*.yaml",
      "*.yml"
    ],
    "tests": [
      "backend/tests/**/*.py",
      "frontend/__tests__/**/*.{ts,tsx}",
      "**/*test*.py",
      "**/*spec*.{ts,tsx}"
    ]
  },
  
  "github.copilot.domainSpecificSuggestions": {
    "ofitec": {
      "patterns": [
        "conciliacion",
        "reconcile", 
        "invoice",
        "factura",
        "bank",
        "banco",
        "movement",
        "movimiento",
        "customer",
        "cliente",
        "supplier",
        "proveedor",
        "tax",
        "impuesto",
        "sii",
        "ar_",
        "ap_",
        "sc_",
        "ep_"
      ],
      "contextFiles": [
        "recon_constants.py",
        "reconcile_engine.py", 
        "db_utils.py",
        "server.py"
      ]
    }
  },
  
  "github.copilot.languagePreferences": {
    "python": {
      "style": "pythonic",
      "typing": "strict",
      "docstrings": "google",
      "linting": "flake8"
    },
    "typescript": {
      "style": "strict",
      "imports": "absolute_from_root",
      "components": "functional",
      "hooks": "preferred"
    },
    "sql": {
      "dialect": "sqlite",
      "style": "lowercase_keywords"
    }
  },
  
  "github.copilot.massOperations": {
    "import_correction": {
      "enabled": true,
      "patterns": [
        "from backend import",
        "from backend.",
        "import backend."
      ],
      "replacements": [
        {
          "from": "from backend import (.*)",
          "to": "import $1"
        },
        {
          "from": "from backend\\.(.*) import",
          "to": "from $1 import"
        }
      ]
    },
    "test_fixes": {
      "enabled": true,
      "autoFix": true,
      "patterns": [
        "ModuleNotFoundError: No module named 'backend'",
        "ImportError.*backend"
      ]
    }
  }
}