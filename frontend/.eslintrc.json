{
  "root": true,
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./",
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "overrides": [
    {
      "files": ["next.config.js", "postcss.config.js", "tailwind.config.js"],
      "parserOptions": { "project": null }
    }
  ],
  "rules": {
    // Ajuste: permitir expl√≠citamente importar React 18 sin types adicionales
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_|^(kpis|dashboardLoading|dashboardError|error|loading|topProviders)$"
      }
    ],
    "prettier/prettier": ["error", { "endOfLine": "lf" }]
  }
}
